@* Página do Layout, ou seja, elementos comuns a todas as páginas *@
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts")
</head>
<body>
    <header>
        <span class="creditos">Feito por Lucas Negreiros Coradine</span>
        <nav>
            <ul class="filtros">
                <li id="filtro-candidatos" data-value="Candidatos" title="Filtrar por candidato"><a class="active" href="#">Candidatos</a></li>
                <li id="filtro-concursos" data-value="Concursos" title="Filtrar por concurso"><a href="#">Concursos</a></li>
                <li id="atualizarDb" class="atualizar-db" title="Atualizar banco de dados"><a href="#">Atualizar Tabela</a></li>
            </ul>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
